<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!--SpringMVC的配置文件，包含网站跳转逻辑的控制，配置 -->
	
	<context:property-placeholder location="classpath:test.properties"/>

	<!-- 扫描的包:use-default-filters="false"表示取消默认操作;(默认情况下是全部需要扫描的) -->
	<context:component-scan base-package="com.security"
		use-default-filters="false">

		<!-- 只扫描控制器Controller和ControllerAdvice -->
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller" />

		<context:include-filter type="annotation" expression="org.springframework.web.bind.annotation.ControllerAdvice" />
	</context:component-scan>

	<!--配置视图解析器，方便页面返回 -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>
	
	<!-- 配置拦截器 -->
	<mvc:interceptors>
		<mvc:interceptor>
			<!-- 所有的请求都进入拦截器 -->
			<mvc:mapping path="/**"/>
			<!-- 配置不拦截的路径-->
			<mvc:exclude-mapping path="/login"/>
			<mvc:exclude-mapping path="/sendget"/>
			<mvc:exclude-mapping path="/resource/**"/>
			<!-- 配置具体的拦截器 -->
			<bean class="com.security.interceptor.CustomInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>

	<!-- 将springmvc不能处理的请求交给tomcat -->
	<mvc:default-servlet-handler />

	<!-- 能支持springmvc更高级的一些功能，JSR303校验，快捷的ajax...映射动态请求 -->
	<mvc:annotation-driven />
	
</beans>